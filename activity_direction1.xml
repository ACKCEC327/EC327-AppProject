<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_direction1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.connor.ec327androidtuneplay.Direction1">



        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:background = "@drawable/homebutton1"
            android:layout_marginBottom = "15dp"
            android:id="@+id/pictureWindow">


            <ImageView
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:layout_centerInParent="true"
                android:src="@drawable/playscreen1" />
        </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below = "@id/pictureWindow"
        android:layout_centerHorizontal="true"
        android:text="This is Tune Play's Game Screen. There are two drums (top), two guitar strings (middle), and three piano keys (bottom)."
        android:textAlignment="center"
        android:paddingBottom="10dp"/>

</RelativeLayout>
