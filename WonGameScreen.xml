<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.connor.ec327androidtuneplay.HomeScreen">

    <TextView
        android:id="@+id/congrats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONGRATS!"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/youWon"
        android:textSize="60sp"
        android:textColor="@android:color/holo_blue_dark" />

    <TextView
        android:id="@+id/youWon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You have defeated TunePlay!"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="30sp"
        android:textColor="@android:color/holo_blue_dark" />

    <TextView
        android:id="@+id/moreLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(More levels coming soon)"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/youWon"
        android:textSize="20sp"
        android:textColor="@android:color/holo_blue_dark" />
    
    <Button
        android:id="@+id/directionsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/moreLevel"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="Back to home"
        android:textSize="15sp"
        android:textColor="@android:color/holo_blue_dark"
        android:background="@drawable/homebutton1"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:onClick="backToHome"/>

</RelativeLayout>

